        <hr class="client-line-right" />
      </div>
      <div class="client-details-section">
        <div class="client-details">
          <div class="client-row">
            <p><span class="client-label">Cliente:</span> <%= invoice.client.name %></p>
            <p><span class="client-label">Teléfono:</span> <%= invoice.client.phone %></p>
          </div>
          <p><span class="client-label">Racha semanal:</span> <%= invoice.client.streak %> semanas</p>
        </div>
      </div>
    </div>

    <div class="invoice-items">
      <table>
        <thead>
          <tr>
            <th>Descripción</th>
            <th>Cantidad</th>
            <th>Precio</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(item) { %>
          <tr>
            <td><%= item.description %></td>
            <td><%= item.quantity %></td>
            <td><%= item.unitPrice.toFixed(2) %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <div class="invoice-totals">
      <table>
        <tr class="total-row">
          <td>TOTAL (MXN):</td>
          <td><span id="grandTotal"><%= invoice.total.toFixed(2) %></span></td>
        </tr>
      </table>
    </div>

    <!-- Redes Sociales -->
    <div class="social-media">
      <p>Síguenos en redes:</p>
      <a href="https://www.facebook.com/people/Vanguardia-DTF/61574143223784/" target="_blank">Facebook</a> |
      <a href="https://www.facebook.com/people/Vanguardia-DTF/61574143223784/" target="_blank">Insta</a> |
      <a href="https://www.facebook.com/people/Vanguardia-DTF/61574143223784/" target="_blank">WhatsApp</a>
    </div>

    <div class="invoice-footer">
      <div class="footer-brand">
        <span>Vanguardia DTF</span>
      </div>
    </div>
  </div>
</body>
