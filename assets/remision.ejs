<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Factura</title>
  <style>
    /* ================= Reset y tipografía ================= */
    html, body {
      width: 100%;
      overflow-x: hidden;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      line-height: 1.6;
      background-color: #000000;       /* Fondo negro */
      color: #FFFFFF;                  /* Texto blanco por defecto */
    }

    body {
      padding: 20px;
    }

    /* ================= Contenedor principal ================= */
    .invoice-container {
      width: 100%;
      max-width: 550px; /* Increased max-width by 10% */
      margin: 0 auto;
      border: 1px solid #333333;
      padding: 20px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.7);
      background-color: #000000;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    /* ================= Encabezado (Nueva estructura) ================= */
    .header-section {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding-bottom: 20px;
      border-bottom: 1px solid #333333;
    }

    .header-left h1 {
      color: #FFD700; /* Yellow/Gold for emphasis */
      font-size: 3.6em; /* Reduced by 10% */
      margin: 0;
      text-transform: uppercase;
      font-weight: normal;
      letter-spacing: 2px;
    }

    .header-left .title-line {
      border: none;
      border-top: 2px solid #FFD700; /* Yellow/Gold line */
      width: 100%;
      margin: 10px 0 5px 0;
    }

    .header-left .invoice-number {
      font-size: 1.8em; /* Reduced by 10% */
      color: #FFFFFF;
      margin: 0;
      font-weight: bold;
    }

    .header-left .sub-line {
      border: none;
      border-top: 1px solid #666666; /* Gray line */
      width: 80%;
      margin: 3px 0 8px 0; /* Reduced margin */
    }

    .header-left .invoice-date {
      font-size: 1.3em; /* Reduced by 10% */
      color: #AAAAAA; /* Gray for subtle text */
      margin: 0;
    }

    .header-right {
      text-align: right;
    }

    .header-right .company-name {
      font-family: 'Georgia', serif; /* Example font from image */
      font-size: 2.0em; /* Increased font size */
      color: #FFD700; /* Yellow/Gold */
      margin: 0;
    }

    .header-right .company-slogan {
      font-size: 1.0em; /* Increased font size */
      color: #AAAAAA; /* Gray */
      margin: 3px 0 0 0; /* Reduced margin */
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    /* ================= Sección Cliente (Nueva estructura) ================= */
    .client-section {
      text-align: center;
      margin-bottom: 20px;
    }

    .client-label-wrapper {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 20px;
    }

    .client-line-left, .client-line-right {
      border: none;
      border-top: 1px solid #666666; /* Gray line */
      flex-grow: 1;
      margin: 0 10px;
    }

    .client-label {
      background-color: #555555; /* Darker gray for the label background */
      color: #FFD700; /* Yellow/Gold for label text */
      padding: 5px 15px;
      border-radius: 5px;
      font-weight: bold;
      text-transform: uppercase;
      font-size: 0.9em;
      white-space: nowrap;
    }

    .client-details p {
      margin: 6px 0;
      color: #FFFFFF;
      font-size: 1.3em; /* Reduced by 10% */
    }

    /* ================= Tabla de productos ================= */
    .invoice-items {
      margin-bottom: 20px;
    }

    .invoice-items table {
      width: 100%;
      border-collapse: collapse;
      border: 1px solid #444; /* Darker border */
    }

    .invoice-items th, .invoice-items td {
      border: 1px solid #444; /* Darker border */
      padding: 14px; /* Increased padding */
      text-align: center; /* Centered text */
      color: #f0f0f0; /* Ensure text is light */
    }
    .invoice-items th:nth-child(1), .invoice-items td:nth-child(1) { /* Description */
      width: 50%;
    }
    .invoice-items th:nth-child(2), .invoice-items td:nth-child(2) { /* Quantity */
      width: 25%;
    }
    .invoice-items th:nth-child(3), .invoice-items td:nth-child(3) { /* Price */
      width: 25%;
    }

    .invoice-items th {
      background-color: #3a3a3a; /* Darker background for headers */
      font-weight: bold;
      text-transform: uppercase;
      font-size: 1.2em; /* Reduced by 10% */
      color: #FFD700; /* Yellow/Gold for table headers */
    }

    .invoice-items tr:nth-child(even) {
      background-color: #1a1a1a; /* Slightly lighter for even rows */
    }

    .invoice-items tr:hover {
      background-color: #2a2a2a; /* Darker on hover */
    }

    /* ================= Totales ================= */
    .invoice-totals {
      margin-top: 20px;
      width: 100%;
    }

    .invoice-totals table {
      width: 100%;
      border-collapse: collapse;
    }

    .invoice-totals td {
      padding: 8px 0;
      text-align: right;
      font-size: 1.3em; /* Reduced by 10% */
      color: #FFFFFF;
    }

    .invoice-totals .total-row td {
      font-weight: bold;
      border-top: 2px solid #FFD700; /* Yellow/Gold line */
      padding-top: 14px;
      font-size: 1.2em; /* Reduced by 10% */
      color: #FFD700;
    }

    /* ================= Pie de página ================= */
    .invoice-footer {
      text-align: center;
      margin-top: 40px;
      padding-top: 20px;
      border-top: 1px solid #444; /* Darker border */
      font-size: 0.8em;
      color: #aaa; /* Gray for subtle text */
    }

    /* Styling for the new logo placeholder */
    .company-logo-placeholder {
      width: 150px; /* Adjust as needed */
      height: auto;
      margin-left: auto; /* Align to right */
    }

    .company-logo-svg {
      max-width: 100%;
      height: auto;
      display: block;
    }

    /* ================= Responsive Adjustments ================= */
    @media (max-width: 600px) {
      body {
        padding: 0;
      }

      .invoice-container {
        padding: 8px;
        gap: 10px;
        max-width: 100%;
        min-height: 98vh;
      }

      .header-section {
        flex-direction: column;
        align-items: flex-start;
      }

      .header-left h1 {
        font-size: 2.7em; /* Reduced by 10% */
      }

      .header-left .invoice-number {
        font-size: 1.6em; /* Reduced by 10% */
      }

      .header-left .invoice-date {
        font-size: 1.1em; /* Reduced by 10% */
      }

      .header-right {
        text-align: left;
        margin-top: 8px;
        width: 100%;
      }

      .company-logo-placeholder {
        margin-left: 0;
        width: 160px;
      }

      .header-right .company-name,
      .header-right .company-slogan {
        text-align: left;
      }

      .invoice-totals table {
        width: 100%;
      }

      .invoice-items th,
      .invoice-items td {
        padding: 14px 5px;
        font-size: 1.1em; /* Reduced by 10% */
      }

      .client-details p {
        font-size: 1.1em; /* Reduced by 10% */
      }

      .invoice-totals .total-row td {
        font-size: 1.2em; /* Reduced by 10% */
      }
    }

    @media (max-width: 400px) {
      .header-right {
        width: 100%;
      }
      .header-right {
        margin-top: 20px;
      }
      .invoice-items th, .invoice-items td {
        font-size: 0.8em;
      }
      .invoice-totals table {
        width: 100%;
      }
    }

    /* Media queries from original HTML */
    @media (max-width: 768px) {
      .invoice-container {
        padding: 20px;
      }
      .invoice-items th, .invoice-items td {
        padding: 8px;
        font-size: 0.85em;
      }
      .header-left h1 {
        font-size: 2.2em;
      }
      .header-right .company-name {
        font-size: 1.5em;
      }
    }

    @media (max-width: 600px) {
      .invoice-container {
        padding: 15px;
      }
      .header-section {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }
      .header-left, .header-right {
        width: 100%;
      }
      .header-right {
        margin-top: 20px;
      }
      .invoice-items th, .invoice-items td {
        font-size: 0.8em;
      }
      .invoice-totals table {
        width: 100%;
      }
    }

    /* Social media styles */
    .social-media {
      margin-top: 20px;
      text-align: center;
    }

    .social-media p {
      margin-bottom: 10px;
    }

    .social-media a {
      color: #FFFFFF;
      text-decoration: none;
      margin: 0 10px;
    }

    .social-media a:hover {
      color: #FFD700;
    }
  </style>
</head>
